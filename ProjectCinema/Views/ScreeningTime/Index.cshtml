@using ProjectCinema.Models
@model ScreeningTimeViewModel

    <div class="col-12 text-center text-white">
        <form asp-controller="ScreeningTime" asp-action="Create" method="post">
            <div>
                <label asp-for="MovieTime">Pick date and time</label>

                <div id="datetimepicker">
                    <span><i class="fa fa-calendar"></i></span>
                    <input asp-for="MovieTime" data-val-required="The date field is required."/>
                </div>

                <div><span asp-validation-for="MovieTime"></span></div>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
    <table class="table text-white">
        <thead class="thead-light">
            <tr>
                <th scope="col">Time of screening</th>
            </tr>
        </thead>
        @foreach (var item in Model.ScreeningTime)
        {
            <tbody>
                <tr>
                    <td>@item.MovieTime</td>
                </tr>
            </tbody>
        }
    </table>
   