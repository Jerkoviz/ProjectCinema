@model List<BannerViewModel>


@if (Model == null)
{
    <div class="col-12 text-center text-white">
        <h3>Welcome to the Cinema Paradiso!</h3>
        <h4>Database is empty so there is nothing to show yet!</h4>
        <h4>Insert your data via links in header!</h4>
    </div>
}
else
{
    var model = Model.ToArray();
    var first = model[0];
    var second = model[1];
    var third = model[2];
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active text-white">
                <div class="row banner">
                    <div class="col-6 pr-0" style="max-height: 500px">
                        <img class="banner-img" src="~/image/@first.ImageName" alt="First slide">
                    </div>
                    <div class="col-6" style="background-color:black">
                        <div class="banner" style="padding: 10% 10% ">
                            <h3>@first.MovieName</h3>
                            <p class="pt-3">@first.About</p>
                        </div>
                        <form asp-controller="Movie" asp-action="GetMovie" asp-route-id="@first.MovieId" method="get" style=" padding-left: 10%;">
                            <button type="submit" class="btn btn-outline-dark " style="color:white; font-size: 1.2rem">More info</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="carousel-item text-white">
                <div class="row banner">
                    <div class="col-6 pr-0" style="max-height: 500px">
                        <img class="banner-img" src="~/image/@second.ImageName" alt="Second slide">
                    </div>
                    <div class="col-6" style="background-color:black">
                        <div style="padding: 10% 10%">
                            <h4>@second.MovieName</h4>
                            <p>@second.About </p>
                        </div>
                        <form asp-controller="Movie" asp-action="GetMovie" asp-route-id="@second.MovieId" method="get" style=" padding-left: 10%;">
                            <button type="submit" class="btn btn-outline-dark " style="color:white; font-size: 1.2rem">More info</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="carousel-item text-white">
                <div class="row banner">
                    <div class="col-6 pr-0" style="max-height: 500px">
                        <img class="banner-img" src="~/image/@third.ImageName" alt="Third slide">
                    </div>
                    <div class="col-6" style="background-color:black">
                        <div style="padding: 10% 10%">
                            <h4>@third.MovieName</h4>
                            <p>@third.About</p>
                        </div>
                        <form asp-controller="Movie" asp-action="GetMovie" asp-route-id="@third.MovieId" method="get" style=" padding-left: 10%;">
                            <button type="submit" class="btn btn-outline-dark " style="color:white; font-size: 1.2rem">More info</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}